<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<TextView
		android:layout_height="wrap_content"
		android:id="@+id/buddy_name"
		android:layout_width="wrap_content"
		android:text="TextView"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true"></TextView>

	<ListView
		android:id="@+id/listView1"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_below="@+id/buddy_name"
		android:layout_above="@+id/bottom_chat_input"
		android:transcriptMode="alwaysScroll">
	</ListView>

	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:id="@+id/bottom_chat_input">

		<EditText
			android:id="@+id/chat_text"
			android:layout_alignParentLeft="true"
			android:layout_width="fill_parent"
			android:layout_toLeftOf="@+id/Button01"
			android:layout_height="wrap_content"></EditText>
		<Button
			android:id="@+id/button_send"
			android:text=">"
			android:layout_width="50px"
			android:layout_alignParentRight="true"
			android:layout_height="wrap_content"
			android:onClick="@string/sendMessageClick"></Button>			
	</RelativeLayout>
</RelativeLayout>
